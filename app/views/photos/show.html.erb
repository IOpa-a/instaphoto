
<div class="card text-center photo-form">
  <div class="card-header">
  </div>
  <div class="card-body">

<p>
  <%= image_tag @photo.image.url(:medium) %>
  <strong>Description:</strong>

  <%= @photo.description %>
</p>
<p><%= @photo.user.email if @photo.user %></p>
<% if @photo.user == current_user %>
<%= link_to 'Изменить', edit_photo_path(@photo) %> |
<% end  %>
<%= link_to 'Назад', photos_path %>
  </div>
</div>
